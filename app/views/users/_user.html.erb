<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= user.bio %>
  </p>

  <p>
    <strong>Birthday:</strong>
    <%= time_tag user.birthday %><br>
    - <%= time_ago_in_words user.birthday %>
  </p>

  <% if user.contract %>
    <%= render "contracts/contract", contract: user.contract %>
  <% else %>
    <%= link_to("New contract", new_user_contract_url(user)) %>
  <% end %>

</div>
